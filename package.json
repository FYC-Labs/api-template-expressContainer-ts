{
  "name": "api-template-express-ts",
  "description": "A template for creating an Express.js API",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "main": "src/index.ts",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf yarn.lock && yarn install",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix && tsc --noEmit",
    "test": "jest",
    "build": "tsc",
    "dev": "npx prisma generate && ts-node src/index.ts",
    "start": "node dist/index.js"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.0.5",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "helmet": "^4.4.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.1.0",
    "eslint-plugin-n": "^17.23.1",
    "faker": "^6.6.6",
    "globals": "^16.5.0",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "prisma": "^6.19.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.2"
  }
}
