{
  "name": "api-template-express-ts",
  "description": "A template for creating an Express.js API",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "main": "src/system/infra/http/server.ts",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf yarn.lock && yarn install",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix && tsc --noEmit",
    "test": "jest",
    "build": "tsc && cp ./tsconfig.json ./dist/",
    "dev": "npx prisma generate && ts-node-dev --inspect --transpile-only --exit-child --ignore-watch node_modules -r tsconfig-paths/register src/system/infra/http/server.ts"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "firebase": "^10.11.0",
    "firebase-admin": "^12.1.0",
    "helmet": "^5.1.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/node": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.10",
    "@babel/plugin-transform-typescript": "^7.18.12",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "faker": "^6.6.6",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "prisma": "^4.2.1",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
