{
  "name": "api-template-express-ts",
  "description": "A template for creating an Express.js API",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "main": "src/system/infra/http/server.ts",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf yarn.lock && yarn install",
    "dev": "yarn db && yarn build && yarn start",
    "db": "node ./src/scripts/startDb.js",
    "build": "docker build -t template -f Dockerfile.dev .",
    "build-js": "node ./src/scripts/buildDocker.js",
    "start-js": "node ./src/scripts/startDocker.js",
    "start": "docker run -p 3001:3001 --name template-container-test template",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix && tsc --noEmit",
    "i18n": "i18next-scanner --config ./src/system/i18n/extraction.js --output ./src/system/i18n/extraction 'src/**/*.{ts,tsx,js,jsx}'",
    "prepare": "husky install",
    "test": "jest",
    "changelog": "standard-version --skip.bump --skip.commit --skip.tag",
    "dev-local": "npx prisma generate && ts-node-dev --inspect --transpile-only --exit-child --ignore-watch node_modules -r tsconfig-paths/register src/system/infra/http/server.ts"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.1",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.7",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-useragent": "^1.0.15",
    "firebase": "^10.11.0",
    "firebase-admin": "^12.1.0",
    "helmet": "^5.1.1",
    "i18next": "^21.9.0",
    "i18next-fs-backend": "^1.1.5",
    "i18next-http-middleware": "^3.2.1",
    "ioredis": "^5.2.2",
    "rate-limiter-flexible": "^2.3.8",
    "reflect-metadata": "^0.1.13",
    "semver": "^7.3.7",
    "tsconfig-paths": "^4.2.0",
    "tsyringe": "^4.7.0",
    "uuid": "^8.3.2",
    "youch": "^3.2.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/node": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.10",
    "@babel/plugin-transform-typescript": "^7.18.12",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-useragent": "^1.0.2",
    "@types/geoip-lite": "^1.4.1",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.12",
    "@types/nanoid": "2.0.0",
    "@types/node": "^18.7.1",
    "@types/semver": "^7.3.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.5",
    "commitlint": "^17.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "faker": "^6.6.6",
    "husky": "^8.0.1",
    "i18next-scanner": "^4.0.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.6.0",
    "jest-html-reporters": "^3.0.10",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.2.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
