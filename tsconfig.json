{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@consts/*": ["consts/*"],
      "@db/*": ["db/*"],
      "@enums/*": ["enums/*"],
      "@helpers/*": ["helpers/*"],
      "@libs/*": ["libs/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@customTypes/*": ["types/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/scripts"]
}
